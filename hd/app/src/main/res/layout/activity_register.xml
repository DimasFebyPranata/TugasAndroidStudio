<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#38146A"
    tools:context=".register">


    <ImageView
        android:id="@+id/FrameAtas"
        android:layout_width="232dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/frameatas" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="#F1FBFA"
        android:textSize="40sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10sp"
        android:padding="1dp"
        android:text="Username"
        android:textStyle="bold"
        android:textColor="#F1FBFA"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="#CC235D"
        android:id="@+id/etUsername"
        android:hint="Daftarkan Username Anda"
        android:textColorHint="#756868"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10sp"
        android:padding="1dp"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="#F1FBFA"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#CC235D"
        android:singleLine="true"
        android:id="@+id/etPassword"
        android:hint="Daftarkan Password Anda"
        android:textColorHint="#756868"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"/>
    
    <Button
        android:id="@+id/btnReg"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sign Up"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="register"
        tools:ignore="OnClick" />
    
    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="17sp"
        android:text="Back to Login"
        android:textStyle="italic"
        android:textColor="#F8F6FA"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/FrameBawah"
        android:layout_width="310dp"
        android:layout_height="178dp"
        android:layout_gravity="right"
        app:srcCompat="@drawable/framebawah" />

</LinearLayout>