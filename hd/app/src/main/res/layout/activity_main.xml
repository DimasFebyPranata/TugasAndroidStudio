<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#38146A"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/FrameAtas"
        android:layout_width="232dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/frameatas" />
    <ImageView
        android:id="@+id/Logo"
        android:layout_width="162dp"
        android:layout_height="149dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/bdwshd" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:padding="1dp"
        android:text="Username"
        android:textStyle="bold"
        android:textColor="#F1FBFA"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:singleLine="true"
        android:id="@+id/etUsername"
        android:hint="Silahkan Masukan Username Anda"
        android:textColorHint="#756868"
        android:textColor="#CC235D"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:padding="1dp"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="#F1FBFA"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="true"
        android:id="@+id/etPassword"
        android:hint="Silahkan Masukan Password Anda"
        android:textColor="#CC235D"
        android:textColorHint="#756868"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>


    <Button
        android:id="@+id/btnLog"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="login"
        android:text="Login" />
    <Button
        android:id="@+id/btnReg"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sign Up"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="register"/>

    <ImageView
        android:id="@+id/FrameBawah"
        android:layout_width="245dp"
        android:layout_height="137dp"
        android:layout_gravity="right"
        app:srcCompat="@drawable/framebawah"
        />


</LinearLayout>